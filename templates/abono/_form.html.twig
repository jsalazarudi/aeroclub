{{ form_start(form,{'attr': {'class': 'p-2' }}) }}
{% if is_granted('ROLE_TESORERO') %}
<div class="row">
    <div class="col mb-3 form-check form-switch">
        {{ form_label(form.aprobado) }}

        {% if form_errors(form.aprobado) %}
            <div class="alert alert-danger">
                {{ form_errors(form.aprobado) }}
            </div>
        {% endif %}

        {{ form_widget(form.aprobado) }}
    </div>
</div>
{% endif %}

{% if not is_granted('ROLE_TESORERO') %}
    <div class="row">
        <div class="col mb-3">
            {{ form_label(form.reservasHangar) }}

            {% if form_errors(form.reservasHangar) %}
                <div class="alert alert-danger">
                    {{ form_errors(form.reservasHangar) }}
                </div>
            {% endif %}

            {{ form_widget(form.reservasHangar) }}
        </div>
    </div>

    <div class="row">
        <div class="col mb-3">
            {{ form_label(form.fecha) }}

            {% if form_errors(form.fecha) %}
                <div class="alert alert-danger">
                    {{ form_errors(form.fecha) }}
                </div>
            {% endif %}

            {{ form_widget(form.fecha) }}
        </div>
    </div>
{% endif %}



<div class="text-center mt-3">
    <button class="btn btn-primary btn-lg">{{ button_label|default('Guardar') }}</button>
</div>
{{ form_end(form) }}
