{% extends 'theme.html.twig' %}

{% block title %}Listado instructores{% endblock %}

{% block content %}

    <div class="container">

        <h1 class="text-center mt-5 mb-5">Listado instructores <a class="btn btn-success" href="{{ path('aeroclub_instructor_new') }}">Crear instructor</a></h1>

        <div class="text-center">
            <p class="fw-bold">Filtrar por:</p>
            {% set filtros = {
                'i.nombre' : 'Nombre',
                'i.apellido': 'Apellido'
            } %}
            {{ knp_pagination_filter(instructores,filtros) }}

            <a class="btn btn-link" href="{{ path('aeroclub_instructor_index') }}">Sin Filtros</a>
        </div>


        <table class="table">
            <thead>
            <th {% if instructores.isSorted('t.nombre') %} class="table-active" {% endif %}>
                {{ knp_pagination_sortable(instructores,'Nombre','i.nombre') }}
            </th>
            <th {% if instructores.isSorted('t.apellido') %} class="table-active" {% endif %}>
                {{ knp_pagination_sortable(instructores,'Apellido','i.apellido') }}
            </th>
            <th {% if instructores.isSorted('t.email') %} class="table-active" {% endif %}>
                {{ knp_pagination_sortable(instructores,'Correo','i.email') }}
            </th>
            <th></th>
            </thead>
            <tbody>
            {% for instructor in instructores %}
                <tr>
                    <td>{{ instructor.nombre }}</td>
                    <td>{{ instructor.apellido }}</td>
                    <td>{{ instructor.email }}</td>
                    <td>
                        <a class="btn btn-warning" href="{{ path('aeroclub_instructor_edit', {'id': instructor.id}) }}">Editar</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <p class="text-center fw-bold">
            Registros totales: {{ instructores.count }}
        </p>

        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(instructores) }}
        </div>
    </div>
{% endblock %}