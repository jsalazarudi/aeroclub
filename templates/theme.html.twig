{% extends 'base.html.twig' %}

{% block body %}

    {% if is_granted('ROLE_TESORERO') %}
        {{ include('sidebar_menu/tesorero.html.twig') }}
    {% endif %}

    {% if is_granted('ROLE_ALUMNO') %}
        {{ include('sidebar_menu/alumno.html.twig') }}
    {% endif %}

    {% if is_granted('ROLE_ADMINISTRADOR') %}
        {{ include('sidebar_menu/administrador.html.twig') }}
    {% endif %}

    {% if is_granted('ROLE_SOCIO') %}
        {{ include('sidebar_menu/socio.html.twig') }}
    {% endif %}

    {% if is_granted('ROLE_PILOTO') %}
        {{ include('sidebar_menu/piloto.html.twig') }}
    {% endif %}

    {% if is_granted('ROLE_INSTRUCTOR') %}
        {{ include('sidebar_menu/instructor.html.twig') }}
    {% endif %}

    <div class="w-100 p-5">
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn close" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}

        {% block content %}{% endblock %}
    </div>
{% endblock %}